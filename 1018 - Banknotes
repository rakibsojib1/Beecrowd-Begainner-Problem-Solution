#include <iostream>
using namespace std;

int main() {

    int n;
    cin>>n;
    int val;
    cout<<n<<endl;
    cout<<n/100<<" nota(s) de R$ 100,00"<<endl;
    val = n%100;
    cout<<val/50<<" nota(s) de R$ 50,00"<<endl;
    val = val%50;
    cout<<val/20<<" nota(s) de R$ 20,00"<<endl;
    val = val%20;
    cout<<val/10<<" nota(s) de R$ 10,00"<<endl;
    val = val%10;
    cout<<val/5<<" nota(s) de R$ 5,00"<<endl;
    val = val%5;
    cout<<val/2<<" nota(s) de R$ 2,00"<<endl;
    val = val%2;
    cout<<val/1<<" nota(s) de R$ 1,00"<<endl;

    return 0;
}
